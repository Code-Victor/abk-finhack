---

const futureDate = new Date('2024-10-01T00:00:00Z').getTime();
const currentDate = new Date().getTime();

const timeLeft= futureDate - currentDate;
const timeAway={
    days: Math.floor(timeLeft / (1000 * 60 * 60 * 24)),
    hours: Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)),
    minutes: Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60)),
    seconds: Math.floor((timeLeft % (1000 * 60)) / 1000)
    };
---

<div class="flex gap-2 justify-center items-center mt-4">
    <div class="bg-[#0C0D2C] w-20 rounded-xl py-2 px-4 flex flex-col items-center gap-1">
        <span class="text-[40px] leading-[52px] text-white font-medium">{timeAway.days}</span>
        <span class="text-[#AFAFAF] font-medium text-center">Days</span>
    </div>
    <span class="text-[40px] text-white font-medium text-center">:</span>
    <div class="bg-[#0C0D2C] w-20 rounded-xl py-2 px-4 flex flex-col items-center gap-1">
        <span class="text-[40px] leading-[52px] text-white font-medium">{timeAway.hours}</span>
        <span class="text-[#AFAFAF] font-medium text-center"> Hours</span>
    </div>
    <span class="text-[40px] text-white font-medium text-ce nter">:</span>
    <div class="bg-[#0C0D2C] w-20 rounded-xl py-2 px-4 flex flex-col items-center gap-1">
        <span class="text-[40px] leading-[52px] text-white font-medium">{timeAway.minutes}</span>
        <span class="text-[#AFAFAF] font-medium text-center">Mins</span>
    </div>
    <span class="text-[40px] text-white font-medium text-center">:</span>
    <div class="bg-[#0C0D2C] w-20 rounded-xl py-2 px-4 flex flex-col items-center gap-1">
        <span class="text-[40px] leading-[52px] text-white font-medium">{timeAway.seconds}</span>
        <span class="text-[#AFAFAF] font-medium text-center">Secs</span>
    </div>
</div>
---
