<script>
  import { screenSize } from "@/utils";
  import { animate, inView, stagger } from "motion";
  const EASE = [0.17, 0.55, 0.55, 1] as const;

  function animateChallenge() {
    inView(
      ".the-challenge",
      (info) => {
        info.target.classList.toggle("opacity-0");
        const heading = info.target.querySelector("h2");
        const paragraphs = Array.from(info.target.querySelectorAll("p"));
        const elements = [heading, ...paragraphs] as Element[];
        animate(
          elements,
          {
            x: [28, 0],
            opacity: [0, 1],
          },
          {
            easing: EASE,
            duration: 0.36,
            delay: stagger(screenSize({ default: 0.12, md: 0.18 })!),
          },
        );
      },
      {
        amount: 0.4,
      },
    );
  }
  animateChallenge();
</script>
