---
import { Image } from "astro:assets";
import TimelineGlare from "@/assets/images/timeline-glare.png";
interface Props {
  date: string;
  time?: string;
  description: string;
}
const { date, time, description } = Astro.props;
---

<div class="flex flex-col rounded-md shadow-md overflow-hidden my-3 md:my-5">
  <div class="relative overflow-hidden">
    <div
    class="bg-[#020459] px-4 py-2 md:px-6 md:py-3 relative flex item-center z-[1]"
    >
    <Image
      src={TimelineGlare}
      alt="timeline-glare"
      class="absolute inset-0 w-full h-full object-cover object-right translate-x-1 -z-1 mix-blend-screen"
    />
      <p class="text-white font-semibold relative">
        {date}{
          time ? (
            <>
              , <span class="text-[#aacf1d]">{time}</span>
            </>
          ) : null
        }
      </p>
    </div>
  </div>
  <div class="px-6 py-3 bg-[#f5f5f5]">
    <p class="text-sm md:text-base">
      {description}
    </p>
  </div>
</div>
