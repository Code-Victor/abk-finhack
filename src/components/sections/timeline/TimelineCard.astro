---
import { Image } from 'astro:assets';
import TimelineGlare from '@/assets/images/timeline-glare.png';
interface Props {
  date: string;
  time?: string;
  description: string;
}
const { date, time, description } = Astro.props;
---

<div class="flex flex-col rounded-md shadow-md overflow-hidden my-3 md:my-5">
  <div class="relative overflow-hidden">
      <Image src={TimelineGlare} alt="timeline-glare" class="absolute inset-0 object-contain object-right -z-1" />
      <div class="bg-[#02035957] px-6 py-3 relative flex item-center z-[1]">
        <p class="text-white font-semibold relative">
          {date}{
            time ? (
              <>
                , <span class="text-[#aacf1d]">{time}</span>
              </>
            ) : null
          }
        </p>
      </div>
  </div>
  <div class="px-6 py-3 bg-[#f5f5f5]">
    <p>
      {description}
    </p>
  </div>
</div>
