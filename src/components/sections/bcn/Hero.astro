---
import { AnimatedGrid, ShinyText } from "@/components/inc";
import { cn } from "@/utils";
import { Icon } from "astro-icon/components";
import ball1 from "@/assets/images/ball-1.png";
import ball2 from "@/assets/images/ball-2.png";
import { Image } from "astro:assets";
---

<div
  class="pt-[calc(var(--navbar-height)_+_36px)] bg-[#010225] w-full relative flex flex-col h-screen xl:max-h-[1024px] xl:min-h-min"
>
  <AnimatedGrid width={50} height={50} class="flex items-center justify-center">
    <div class="flex flex-col items-center justify-center text-white px-4">
      <div
        class={cn(
          "group rounded-full border border-black/5 bg-neutral-100/10 text-base transition-all ease-in hover:cursor-pointer hover:bg-neutral-100/10 ",
        )}
      >
        <ShinyText
          class="inline-flex items-center justify-center px-4 py-1 transition ease-out"
        >
          <span>âœ¨ Launching soon</span>
          <Icon
            name="ri:arrow-right-s-line"
            class="ml-1 size-3 transition-transform duration-300 ease-in-out group-hover:translate-x-0.5"
          />
        </ShinyText>
      </div>
      <h1
        class="font-adoha text-center text-3xl md:text-[44px] md:leading-[66px]"
      >
        We are creating something amazing
      </h1>
      <p class="text-sm md:text-base text-center md:max-w-lg">
        Our website is under construction. We'll be here soon with our new
        awesome site.
      </p>
    </div>
  </AnimatedGrid>
  <div class="h-[30vh] relative">
    <Image
      src={ball2}
      alt="Ball 1"
      class="md:hidden absolute bottom-0 left-0 right-0 w-full z-10"
    />
    <Image
      src={ball1}
      alt="Ball 1"
      class="hidden md:block absolute bottom-0 left-0 right-0 w-full max-w-8xl mx-auto z-10"
    />
  </div>
</div>
